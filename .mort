function numSuffix() {
	case ${1: -2} in
		01|21|31) echo "st";;
		02|22)    echo "nd";;
		03|23)    echo "rd";;
		*)        echo "th";;
	esac;
}

function day() { date "+%A the %-d$(numSuffix %d)"; }
function week() { date +%V; }

function center() {
	col=$(( ($(tput cols) - ${#1}) / 2));
	printf "%*s" $col;
	echo "$1";
}

if tput setaf 1 &> /dev/null; then
	light_grey=$(tput setaf 188);
	reset=$(tput sgr0);
else
	light_grey="\e[1;37m";
	reset="\e[0m";
fi;

function mort() {
	echo -n $light_grey
	center "Day `~/.daysalive.sh`.";
	center "Week `week` of this year.";
	center "It is `day`.";
	echo $reset;
	center ðŸ’€;
}
